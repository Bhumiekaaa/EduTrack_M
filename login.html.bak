            }
        }

        // Handle form submission and role-based redirect
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const rememberMe = document.getElementById('remember-me').checked;
            const email = document.getElementById('email').value;
            const role = document.getElementById('selected-role').value;

            if (rememberMe) {
                localStorage.setItem('savedEmail', email);
                localStorage.setItem('savedRole', role);
            } else {
                localStorage.removeItem('savedEmail');
                localStorage.removeItem('savedRole');
            }

            // Try server login first. If the API responds with a role, use that.
            try {
                const formData = new FormData(this);
                const res = await fetch(this.action, {
                    method: this.method || 'POST',
                    body: formData,
                    credentials: 'same-origin'
                });

                if (res.ok) {
                    // Expecting JSON like { success: true, role: 'student' }
                    const data = await res.json().catch(() => ({}));
                    const serverRole = data.role || role;
                    // store role and redirect
                    sessionStorage.setItem('edu_role', serverRole);
                    redirectByRole(serverRole);
                    return;
                }
            } catch (err) {
                // network error or API not implemented â€” fall back to client role
                console.warn('Login API not available, falling back to client-side routing', err);
            }

            // Fallback: use selected role and redirect
            sessionStorage.setItem('edu_role', role);
            redirectByRole(role);
        });

        function redirectByRole(role) {
            // Map roles to pages; adjust paths if your app uses server routes instead
            if (role === 'teacher') {
                window.location.href = '/teachers.html';
            } else if (role === 'parent' || role === 'guardian') {
                window.location.href = '/parents.html';
            } else {
                window.location.href = '/students.html';
            }
        }
